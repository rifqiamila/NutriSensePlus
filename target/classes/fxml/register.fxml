<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox spacing="8" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.nutrisense.controllers.RegisterController" stylesheets="/css/nutrisense.css">
    <Label text="Daftar NutriSense+" styleClass="app-title"/>
    <ComboBox fx:id="roleBox" prefWidth="320" />
    <TextField fx:id="f1" promptText="NISN / Nama / Nama Dapur" prefWidth="320" />
    <TextField fx:id="f2" promptText="Nama Sekolah (opsional)" prefWidth="320" />
    <TextField fx:id="f3" promptText="Penanggung Jawab (dapur)" prefWidth="320" />
    <PasswordField fx:id="pw" promptText="Password" prefWidth="320" />
    <HBox spacing="8">
        <Button text="Daftar" onAction="#onRegister" styleClass="btn-primary"/>
        <Button text="Kembali" onAction="#onBack" styleClass="btn-default"/>
    </HBox>
    <Label fx:id="status" />
</VBox>
