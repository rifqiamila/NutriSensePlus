<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.PieChart?>
<VBox spacing="8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.nutrisense.controllers.FoodAnalyzerController" stylesheets="/css/nutrisense.css">
    <HBox spacing="8">
        <TextField fx:id="foodField" promptText="Nama makanan"/>
        <TextField fx:id="gramsField" promptText="Gram (100)"/>
        <Button text="Analyze" onAction="#onAnalyze" styleClass="btn-primary"/>
        <Button text="Back" onAction="#onBack" styleClass="btn-default"/>
    </HBox>
    <PieChart fx:id="pieChart" prefHeight="300"/>
    <TextArea fx:id="detailsArea" prefHeight="140"/>
</VBox>
