<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.nutrisense.controllers.DashboardController" stylesheets="/css/nutrisense.css">
    <left>
        <VBox spacing="18" styleClass="sidebar">
            <Label text="NutriSense+" styleClass="sidebar-logo"/>
            <VBox spacing="6" styleClass="menu">
                <Button text="Dashboard" onAction="#openAnalyzer" styleClass="menu-btn"/>
                <Button text="Nutrisi" onAction="#openAnalyzer" styleClass="menu-btn"/>
                <Button text="Catatan Harian" styleClass="menu-btn"/>
                <Button text="Analisa Data" onAction="#openAnalyzer" styleClass="menu-btn"/>
                <Button text="Laporan" onAction="#openReport" styleClass="menu-btn"/>
                <Button text="Profile" onAction="#openProfile" styleClass="menu-btn"/>
            </VBox>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Sign Out" onAction="#logout" styleClass="signout-btn"/>
        </VBox>
    </left>
    <top>
        <HBox styleClass="topbar" spacing="12" alignment="CENTER_LEFT">
            <Label fx:id="titleLabel" styleClass="title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField promptText="Search menu or school" styleClass="search-field"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="12" styleClass="center-area">
            <HBox spacing="12">
                <VBox spacing="6" styleClass="card">
                    <Label text="Kalori Hari Ini" styleClass="card-title"/>
                    <Label text="450 kcal" styleClass="card-value"/>
                </VBox>
                <VBox spacing="6" styleClass="card">
                    <Label text="Nutrisi Utama" styleClass="card-title"/>
                    <Label text="Protein tinggi" styleClass="card-value"/>
                </VBox>
                <VBox spacing="6" styleClass="card">
                    <Label text="Progress Minggu" styleClass="card-title"/>
                    <Label text="75%" styleClass="card-value"/>
                </VBox>
            </HBox>
            <Label text="Data Menu Terakhir" styleClass="section-title"/>
            <TableView prefHeight="260">
                <columns>
                    <TableColumn text="Tanggal"/>
                    <TableColumn text="Menu"/>
                    <TableColumn text="Kalori"/>
                    <TableColumn text="Protein"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
